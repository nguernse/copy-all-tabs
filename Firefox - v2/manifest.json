{

  "manifest_version": 2,
  "name": "Copy All Tabs",
  "description": "Copy all your tabs, meow",
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },
  

  "background": {
    "scripts": [
        "/src/menu.js",
        "/src/utils.js",
        "/src/background.js"
    ]
},
  
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }
}
